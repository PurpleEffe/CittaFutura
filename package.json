{
  "name": "cittafutura-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n API,WEB -c green,cyan \"npm:dev:api\" \"npm:dev:web\"",
    "dev:api": "tsx apps/api/src/server.ts",
    "dev:web": "vite --config apps/web/vite.config.ts --port 5173",
    "build": "npm run build:api && npm run build:web",
    "build:api": "tsc -p apps/api/tsconfig.json",
    "build:web": "vite build --config apps/web/vite.config.ts",
    "start": "node apps/api/dist/server.js",
    "lint": "eslint .",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "rimraf data/app.db && prisma migrate reset --force && tsx scripts/seed.ts"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "6.0.0-rc.1",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite": "^5.4.3"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/jwt": "^8.0.1",
    "@fastify/static": "^7.0.4",
    "@prisma/client": "^5.17.0",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "zod": "^3.23.8"
  }
}
