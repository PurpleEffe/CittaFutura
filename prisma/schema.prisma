generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  GESTORE
  ADMIN
}

enum BookingStatus {
  IN_REVIEW
  APPROVED
  REJECTED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  role         Role      @default(USER)
  name         String?
  createdAt    DateTime  @default(now())
  bookings     Booking[]
}

model House {
  id        String     @id @default(cuid())
  slug      String     @unique
  title     String
  summary   String?
  capacity  Int        @default(4)
  services  String[] @default([])
  photos    String[] @default([])
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  bookings  Booking[]
  blackout  Blackout[]
}

model Booking {
  id        String        @id @default(cuid())
  userId    String
  houseId   String
  startDate DateTime
  endDate   DateTime
  people    Int
  notes     String?
  status    BookingStatus @default(IN_REVIEW)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User          @relation(fields: [userId], references: [id])
  house     House         @relation(fields: [houseId], references: [id])

  @@index([houseId, startDate, endDate])
}

model Blackout {
  id        String   @id @default(cuid())
  houseId   String
  startDate DateTime
  endDate   DateTime
  reason    String?
  house     House    @relation(fields: [houseId], references: [id])
}
